<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.withus.mapper.UserMapper">
    <!-- User 테이블 가져오기 -->
    <select id="getUserList" resultType="com.example.withus.vo.UserVo">
        SELECT *
        FROM tb_user
        WHERE mbr_sn = #{sn}
    </select>

    <!-- 회원가입 -->
    <insert id="insertUser" parameterType="com.example.withus.vo.UserVo">
        INSERT INTO tb_user
        (
            mbr_id,
            password,
            mbr_nm,
            mbr_nick,
            mbr_date,
            mbr_gen,
            mbr_tel,
            mbr_email,
            rgtr_id,
            rgtr_dt
        )
        VALUES
        (
            #{mbr_id},
            #{password},
            #{mbr_nm},
            #{mbr_nick},
            #{mbr_date},
            #{mbr_gen},
            #{mbr_tel},
            #{mbr_email},
            #{rgtr_id},
            #{rgtr_dt}
        )
    </insert>

    <!-- 회원 정보 가져오기 -->
    <select id="getUserByEmail" resultType="com.example.withus.vo.UserVo">
        SELECT *
        FROM tb_user
        WHERE mbr_id = #{mbr_id}
    </select>

    <select id="getUserBySn" resultType="com.example.withus.vo.UserVo">
        SELECT *
        FROM tb_user
        WHERE mbr_sn = #{mbr_sn}
    </select>

    <select id="getUserById" resultType="com.example.withus.vo.UserVo">
        SELECT *
        FROM tb_user
        WHERE mbr_id = #{mbr_id}
    </select>

    <!-- 회원정보 수정 -->
    <update id="updateUser" parameterType="com.example.withus.vo.UserVo">
        UPDATE tb_user
        SET mbr_nick = #{mbr_nick},
            password = #{password},
            mbr_tel = #{mbr_tel}
        WHERE mbr_sn = #{mbr_sn}
    </update>

    <!-- 탈퇴 -->
    <delete id="deleteUser">
        DELETE
        FROM tb_user
        WHERE mbr_sn = #{mbr_sn}
    </delete>

    <!-- 아이디 중복 체크 -->
    <select id="idCheck" parameterType="String" resultType="int">
        SELECT COUNT(mbr_id) FROM tb_user WHERE mbr_id= #{mbr_id}
    </select>

    <update id="lockMemberLogin">
        UPDATE tb_user
        SET FAIL_CNT = #{fail_cnt},
            LOCK_YN = #{lock_yn}
        WHERE MBR_ID = #{mbr_id}
    </update>

</mapper>
